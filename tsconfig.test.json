{
	"compilerOptions": {

		"target": "es5",
		"module": "commonjs",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		"sourceMap": false,
		"inlineSourceMap": true,

		"inlineSources": false,
		"noEmitHelpers": true
	},
	"exclude": [
		"node_modules"
	],
	"awesomeTypescriptLoaderOptions": {
		"forkChecker": true,
		"useWebpackText": true
	},
	"compileOnSave": false,
	"buildOnSave": false,
	"atom": { "rewriteTsconfig": false }
}
